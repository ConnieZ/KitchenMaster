<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.conniezlabs.kitchenmaster"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.app.default_searchable"
            android:value="com.conniezlabs.kitchenmaster.SearchableActivity" />
        <activity
            android:name="com.conniezlabs.kitchenmaster.KitchenMaster"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".ItemEdit" />
        <activity android:name=".ShoppingList" android:label="@string/shop_list"/>

        <activity android:name="com.conniezlabs.kitchenmaster.SearchableActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

    </application>

</manifest>
